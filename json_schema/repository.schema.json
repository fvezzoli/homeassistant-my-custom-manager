{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://git.villavasco.ovh/home-assistant/my-custom-manager/raw/branch/main/json_schema/repository.schema.json",
    "title": "Repository description",
    "version": "1",
    "type": "object",
    "properties": {
        "name": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "homepage": {
            "type": "string",
            "format": "uri"
        },
        "customs": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z0-9_]+$": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        }
    },
    "required": [
        "name",
        "description",
        "customs"
    ],
    "additionalProperties": false
}